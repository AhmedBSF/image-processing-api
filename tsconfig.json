{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "rootDir": "src",
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
